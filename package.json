{
  "name": "a-note-on-archytas-resolution-of-the-delian-problem",
  "version": "1.0.0",
  "description": "Simple visualization, and description of Archytas's solution to the Delian problem of doubling the cube.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "css:scss": "sass --load-path=node_modules --style compressed src/scss:build/dist",
    "css:lint": "stylelint src/scss/*.scss  --custom-syntax postcss-scss",
    "build:svgs_dev": "ts-node --project=code_gen/tsconfig.json code_gen/dev/ts/gen_dev_svgs.ts",
    "build:css": "npm run css:lint && npm run css:scss",
    "build:js_prod": "webpack --mode=production",
    "build:js": "webpack --mode=development",
    "build:_html": "ts-node --project=tsconfig.json build/code_gen/pre_render_html.js",
    "build:html_dev": "npm run build:js && npm run build:_html",
    "build:html_prod": "npm run build:js_prod && npm run build:_html",
    "build:prod": "npm run build:css && npm run build:js_prod && npm run build:_html",
    "build:dev": "npm run build:css && npm run build:js && npm run build:_html && npm run build:svgs_dev"
  },
  "keywords": [
    "archytas",
    "delian-problem"
  ],
  "author": "Pavel M. Penev",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@jest/globals": "^29.7.0",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/three": "^0.173.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.2.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.20.1",
    "eslint-webpack-plugin": "^4.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "meta-types": "^2.0.0",
    "postcss-scss": "^4.0.9",
    "puppeteer-core": "^24.2.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sass": "^1.85.0",
    "sass-loader": "^16.0.5",
    "sass-math": "^1.0.0",
    "style-loader": "^4.0.0",
    "stylelint": "^16.14.1",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "input-range-scss": "^2.0.0",
    "three": "^0.173.0"
  }
}
